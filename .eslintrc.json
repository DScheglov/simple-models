{
    "env": {
        "browser": true,
        "node":true,
        "es6": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "__LOCAL__": "readonly",
        "__DEV__": "readonly",
        "__PROD__": "readonly",
        "NODE_ENV": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["babel", "react", "react-hooks", "jest"],
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": 0,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "no-underscore-dangle": "off",
        "comma-dangle": "off",
        "no-nested-ternary": "off",
        "indent": ["error", 2, { "flatTernaryExpressions": true, "SwitchCase": 1 }],
        "no-param-reassign": "off",
        "react/jsx-filename-extension": "off",
        "react/require-default-props": "off",
        "react/no-danger": "off",
        "jsx-a11y/no-autofocus": "off",
        "jsx-a11y/label-has-associated-control": "off",
        "jsx-a11y/label-has-for": "off",
        "operator-linebreak": ["error", "before", { "overrides": { "?": "ignore", ":": "ignore" } }],
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error",
        "no-bitwise": "off",
        "arrow-parens": ["error", "as-needed"],
        "object-curly-newline": ["error", { "consistent": true, "minProperties": 7 }]
    },
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "version": "16.8"
        },
        "propWrapperFunctions": [
            "forbidExtraProps",
            {"property": "freeze", "object": "Object"},
            {"property": "myFavoriteWrapper"}
        ]
    }
}